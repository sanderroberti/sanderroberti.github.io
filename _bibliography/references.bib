@article{minPretreatmentPredictionEarly2021,
  title = {Pre-Treatment Prediction of Early Response to Chemoradiotherapy by Quantitative Analysis of Baseline Staging {{FDG-PET}}/{{CT}} and {{MRI}} in Locally Advanced Cervical Cancer},
  author = {Min, Lisa A and Ackermans, Leanne LGC and Nowee, Marlies E and van Griethuysen, Joost JW and Roberti, Sander and Maas, Monique and Vogel, Wouter V and {Beets-Tan}, Regina GH and Lambregts, Doenja MJ},
  year = {2021},
