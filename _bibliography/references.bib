@article{journyDosevolumeEffectsBreast2020a,
  title = {Dose-Volume Effects of Breast Cancer Radiation Therapy on the Risk of Second Oesophageal Cancer},
  author = {Journy, Neige and Schonfeld, Sara J. and Hauptmann, Michael and Roberti, Sander and Howell, Rebecca M. and Smith, Susan A. and Vaalavirta, Leila and Stovall, Marilyn and {van Leeuwen}, Flora E. and Weathers, Rita E. and Hodgson, David and Gilbert, Ethel S. and {Berrington de Gonzalez}, Amy and Morton, Lindsay M.},
  year = {2020},
  month = oct,
  journal = {Radiotherapy and Oncology},
  volume = {151},
  pages = {33--39},
  issn = {0167-8140},
  doi = {10.1016/j.radonc.2020.07.022},
  url = {https://www.sciencedirect.com/science/article/pii/S0167814020304151},
  urldate = {2022-12-05},
  abstract = {Purpose To investigate the relationship between oesophagus dose-volume distribution and long-term risk of oesophageal cancer after radiation therapy for breast cancer. Materials and methods In a case-control study nested within a cohort of 289,748 {$\geq$}5-year survivors of female breast cancer treated in 1943\textendash 2003 in five countries, doses to the second primary cancer (DSPC) and individual dose-volume histograms (DVH) to the entire oesophagus were reconstructed for 252 oesophageal cancer cases and 488 matched controls (median follow-up time: 13, range: 5\textendash 37~years). Using conditional logistic regression, we estimated excess odds ratios (EOR) of oesophageal cancer associated with DVH metrics. We also investigated whether DVH metrics confounded or modified DSPC-related -risk estimates. Results Among the DVH metrics evaluated, median dose (Dmedian) to the entire oesophagus had the best statistical performance for estimating risk of all histological types combined (EOR/Gy~=~0.071, 95\% confidence interval [CI]: 0.018 to 0.206). For squamous cell carcinoma, the most common subtype, the EOR/Gy for Dmedian increased by 31\% (95\% CI: 3\% to 205\%) for each increment of 10\% of V30 (p~=~0.02). Adjusting for DVH metrics did not materially change the EOR/Gy for DSPC, but there was a borderline significant positive interaction between DSPC and V30 (p~=~0.07). Conclusion This first study investigating the relationship between oesophagus dose-volume distribution and oesophageal cancer risk showed an increased risk per Gy for Dmedian with larger volumes irradiated at high doses. While current techniques allows better oesophagus sparing, constraints applied to Dmedian and V30 could potentially further reduce the risk of oesophageal cancer.},
  langid = {english},
  keywords = {Breast cancer,Dose-volume constraint,Oesophageal cancer,Risk modelling,Second cancer},
  file = {C\:\\Users\\Sander\\Zotero\\storage\\3FKJB8VN\\Journy e.a. - 2020 - Dose-volume effects of breast cancer radiation the.pdf;C\:\\Users\\Sander\\Zotero\\storage\\5YSSXI7C\\S0167814020304151.html}
}

